@model IEnumerable<Cinema>

@{
	ViewData["Title"] = "Cinema";
}
<div class =" "row">
	<div class="col-md-10 offset-md-1">
		<table class="table">
		<thead>
			<tr>
				<th scope="col">@Html.DisplayNameFor(model => model.Logo)</th>
				<th scope="col">@Html.DisplayNameFor(model => model.Name)</th>
				<th scope="col">@Html.DisplayNameFor(model => model.Description)</th>
				<th scope="col">Actions</th>
			</tr>
		</thead>
		<tbody>
				@foreach(var item in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width
: 100px"/>
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							<p>@item.Description</p>
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary"><i class="bg bi-pencil-square"></i> Edit</a>
							<a class="btn btn-outline-info"><i class="bg bi-eye"></i> Details</a>
							<a class="btn btn-danger"><i class="bg bi-trash"></i> Delete</a>
						</td>
					</tr>
				}
		</tbody>
</table>
	</div>
</div>
